# NanoAITTS Worker Environment Variables

# Optional API Key for protected endpoints like /v1/voices/refresh
API_KEY=your-api-key-here

# Cloudflare KV Namespace IDs (obtained from Cloudflare Dashboard)
# Leave empty to use in-memory cache only
KV_NAMESPACE_ID=

# Default settings
DEFAULT_VOICE=DeepSeek
DEFAULT_SPEED=1.0
DEFAULT_PITCH=1.0

# Text processing
MAX_TEXT_LENGTH=10000
MIN_TEXT_LENGTH=1
CHUNK_SIZE=500
SHOULD_CLEAN_TEXT=true

# Concurrency limits (to avoid Cloudflare subrequest limits)
MAX_CONCURRENCY=6

# Logging
LOG_LEVEL=info
DEBUG=false
